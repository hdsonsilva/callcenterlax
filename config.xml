<?xml version='1.1' encoding='utf-8'?>
<widget id="io.softhd.callcenter" version="1.1.0" xmlns:gap="http://phonegap.com/ns/1.1" xmlns:cdv="http://cordova.apache.org/ns/1.1">
    <name>
        CallCenterElax
    </name>
    <description>
        Call Center Elastix - Interagindo com seu sistema de CallCenter Elastix. 
        Com esse aplicativo você poderá monitorar as ligações diárias que estão sendo feitas através do seu sistema de CallCenter.
	Ele se integra ao sistema Elastix que você usa em sua empresa.
    </description>

    <icon src="callcentericon.png" width="180" height="180" />
    
    <author email="contato@softwareshd.com.br" href="http://www.softwareshd.com.br">
        Softwares HD
    </author>
    
    <content src="index.html" />
    <!-- Requires cli-8.0.0 but we recommend using the latest version. -->
    <preference name="phonegap-version" value="cli-8.0.0" /> 
    <gap:plugin name="onesignal-cordova-plugin" spec="^2.4.1" source="npm" /> 
    <plugin name="cordova-plugin-whitelist" source="npm" />
    
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="15" />
    <!-- Can omit if not targetting Windows Phone -->
    <preference name="windows-appx-target" value="8.1-phone" />
    <preference name="WindowsToastCapable" value="true" />

    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

</widget>
